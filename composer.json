{
    "name": "limenet/laravel-pdf",
    "description": "Generate PDFs in Laravel with Puppeteer",
    "keywords": [
        "limenet",
        "laravel",
        "laravel-pdf"
    ],
    "homepage": "https://github.com/limenet/laravel-pdf",
    "license": "MIT",
    "authors": [
        {
            "name": "Linus Metzler",
            "email": "hi@linusmetzler.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0 || ^11.0",
        "spatie/laravel-package-tools": "^1.13.0"
    },
    "require-dev": {
        "laravel/pint": "^1.18.3",
        "larastan/larastan": "^3.0.2",
        "nunomaduro/collision": "^7.10.0 || ^8.5.0",
        "orchestra/testbench": "^8.22.0 || ^9.7.0",
        "pestphp/pest": "^3.6",
        "pestphp/pest-plugin-laravel": "^3",
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan-deprecation-rules": "^2.0.1",
        "phpstan/phpstan-phpunit": "^2.0.1",
        "phpunit/phpunit": "^11.4.4"
    },
    "autoload": {
        "psr-4": {
            "Limenet\\LaravelPdf\\": "src",
            "Limenet\\LaravelPdf\\Database\\Factories\\": "database/factories"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Limenet\\LaravelPdf\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "post-update-cmd": [
            "@composer bump -D"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Limenet\\LaravelPdf\\LaravelPdfServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
